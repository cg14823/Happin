<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/app_name"
            android:textColor="@color/tabTitleColor"
            android:textSize="20sp" />

    </android.support.v7.widget.Toolbar>

    <com.google.android.gms.maps.MapView android:id="@+id/placeMapView"
        android:layout_weight= "2.5"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"/>
    <RelativeLayout android:layout_height="match_parent"
        android:layout_width="match_parent" android:layout_weight="8">
        <ImageView android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:layout_alignBottom="@+id/placeText"
            android:layout_alignParentStart="true"
            android:layout_marginStart="32dp"
            android:id="@+id/placeImgview"></ImageView>
        <TextView  android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="TEST"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="60dp"
            android:layout_marginTop="38dp"
            android:id="@+id/placeText" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="like" android:onClick= "liked"
            android:layout_below="@+id/imageView"
            android:layout_marginLeft="270dp"
            android:layout_marginTop="20dp" />
    </RelativeLayout>
</LinearLayout>