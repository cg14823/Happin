<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <TextView
        android:id="@+id/details"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/profilePic"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="20dp"
        android:layout_toEndOf="@+id/profilePic" />

    <ImageView
        android:id="@+id/profilePic"
        android:layout_width="100dp"
        android:layout_height="130dp"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_marginTop="20dp"
        android:background="@color/lightGrey"
        android:onClick="viewProfPic"
        android:scaleType="centerCrop" />

    <TextView
        android:id="@+id/points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/details"
        android:layout_marginStart="@dimen/activity_horizontal_margin"
        android:layout_toEndOf="@+id/profilePic"
        android:text="Points:"
        android:textAppearance="?android:attr/textAppearanceSmall" />

    <RelativeLayout
        android:id="@+id/tabsProfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/profilePic"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:gravity="center">

        <TextView
            android:id="@+id/likedPlacestab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@+id/separatorTab"
            android:layout_alignParentStart="true"
            android:background="@color/unfocusedTab"
            android:clickable="true"
            android:gravity="center"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:text="Liked places"
            android:textAlignment="center"
            android:textColor="@color/tabTitleColor" />

        <View
            android:id="@+id/separatorTab"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:layout_marginEnd="40dp"
            android:layout_marginStart="40dp"
            android:background="@color/grey" />

        <View
            android:id="@+id/underline1"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_alignEnd="@+id/separatorTab"
            android:layout_below="@+id/likedPlacestab"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:background="@color/colorAccent" />

        <View
            android:id="@+id/underline2"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:layout_below="@+id/yourPlacestab"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_toEndOf="@+id/underline1"
            android:background="@color/colorAccent"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/yourPlacestab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/likedPlacestab"
            android:background="@color/unfocusedTab"
            android:clickable="true"
            android:gravity="center"
            android:minHeight="50dp"
            android:minWidth="50dp"
            android:text="Your places"
            android:textAlignment="center"
            android:textColor="@color/tabTitleColor" />

    </RelativeLayout>

    <GridView
        android:id="@+id/profileGrid"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/tabsProfile"
        android:background="@color/white"
        android:columnWidth="100dp"
        android:gravity="center"
        android:numColumns="2" />


</RelativeLayout>