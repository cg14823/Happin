<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:id="@+id/details"
         android:layout_alignTop="@+id/profilePic"
         android:layout_toEndOf="@+id/profilePic"
         android:layout_marginTop="20dp"
         android:layout_marginStart="@dimen/activity_horizontal_margin"/>

     <ImageView
         android:layout_width="100dp"
         android:layout_height="130dp"
         android:id="@+id/profilePic"
         android:onClick="viewProfPic"
         android:scaleType="centerCrop"
         android:layout_marginTop="20dp"
         android:layout_marginStart="@dimen/activity_horizontal_margin"
         android:background="@color/lightGrey"/>

     <TextView
         android:layout_width="wrap_content"
         android:layout_height="wrap_content"
         android:textAppearance="?android:attr/textAppearanceSmall"
         android:text="Points:"
         android:id="@+id/points"
         android:layout_below="@+id/details"
         android:layout_toEndOf="@+id/profilePic"
         android:layout_marginStart="@dimen/activity_horizontal_margin"/>

    <RelativeLayout
        android:gravity="center"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/tabsProfile"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@id/profilePic">

        <TextView
            android:clickable="true"
            android:id="@+id/likedPlacestab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:layout_alignParentStart="true"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:gravity="center"
            android:text="Liked places"
            android:textColor="@color/tabTitleColor"
            android:background="@color/unfocusedTab"
            android:layout_alignEnd="@+id/separatorTab"
           />

        <View
            android:id="@+id/separatorTab"
            android:layout_width="1dp"
            android:layout_height="50dp"
            android:background="@color/grey"
            android:layout_marginStart="40dp"
            android:layout_marginEnd="40dp"
            android:layout_centerInParent="true"
            />
        <View
            android:id="@+id/underline1"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="@color/colorAccent"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_below="@+id/likedPlacestab"
            android:layout_alignEnd="@+id/separatorTab" />
        <View
            android:visibility="invisible"
            android:id="@+id/underline2"
            android:layout_width="fill_parent"
            android:layout_height="3dp"
            android:background="@color/colorAccent"
            android:layout_marginBottom="@dimen/activity_vertical_margin"
            android:layout_below="@+id/yourPlacestab"
            android:layout_toEndOf="@+id/underline1" />

        <TextView
            android:textColor="@color/tabTitleColor"
            android:clickable="true"
            android:textAlignment="center"
            android:id="@+id/yourPlacestab"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="50dp"
            android:minHeight="50dp"
            android:gravity="center"
            android:text="Your places"
            android:background="@color/unfocusedTab"
            android:layout_alignParentEnd="true"
            android:layout_toEndOf="@+id/likedPlacestab"
            />

    </RelativeLayout>

     <GridView
         android:background="@color/white"
         android:gravity="center"
         android:id="@+id/profileGrid"
         android:layout_width="match_parent"
         android:layout_height="match_parent"
         android:numColumns="2"
         android:columnWidth="100dp"
         android:layout_below="@+id/tabsProfile" />


</RelativeLayout>