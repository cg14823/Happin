<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="180dp" android:layout_height="match_parent">
    <ImageView android:layout_height="match_parent"
    android:layout_width="180dp"
    android:scaleType="centerCrop"
    android:id="@+id/placePreviewImage"/>
    <TextView android:layout_height="wrap_content"
        android:layout_width="180dp"
        android:textColor="@color/white"
        android:id="@+id/placePreviewName"
        android:layout_alignStart="@id/placePreviewImage"
        android:layout_alignBottom="@id/placePreviewImage"
        android:textAlignment="center"
        android:onClick="showDetails"
        />
    <TextView android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:visibility="invisible"
        android:id="@+id/previewId"/>
</RelativeLayout>