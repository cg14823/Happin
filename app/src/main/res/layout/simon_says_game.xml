<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

        <TextView
            android:id="@+id/toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left"
            android:text="@string/app_name"
            android:textColor="@color/tabTitleColor"
            android:textSize="20sp" />

    </android.support.v7.widget.Toolbar>

    <RelativeLayout android:layout_height="0dp"
        android:layout_width="match_parent" android:layout_weight="8">
        <TextView  android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text=""
            android:layout_alignParentTop="true"
            android:layout_marginLeft="50dp"
            android:layout_marginTop="25dp"
            android:id="@+id/placeText" />

        <Button
            android:background="#b40000"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="150dp"
            android:onClick="redClick"
            android:id="@+id/redButton" />
        <Button
            android:background="#d7d800"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="145dp"
            android:layout_marginTop="150dp"
            android:onClick="yellowClick"
            android:id="@+id/yellowButton" />
        <Button
        android:background="#0790ae"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="250dp"
        android:layout_marginTop="150dp"
        android:onClick="blueClick"
        android:id="@+id/blueButton" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="100dp"
            android:layout_marginTop="300dp"
            android:text="Start"
            android:onClick="started"
            android:id="@+id/startButton" />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="300dp"
            android:text="replay"
            android:onClick="replayClick"
            android:id="@+id/replayButton" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Press START to begin"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="20sp"
            android:id="@+id/gameText"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="400dp"
            android:background="#ffffff"
            android:id="@+id/oneButton"
            android:enabled="false" />
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="120dp"
            android:layout_marginTop="400dp"
            android:background="#ffffff"
            android:id="@+id/twoButton"
            android:enabled="false"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="200dp"
            android:layout_marginTop="400dp"
            android:background="#ffffff"
            android:id="@+id/threeButton"
            android:enabled="false"/>
        <Button
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="280dp"
            android:layout_marginTop="400dp"
            android:background="#ffffff"
            android:id="@+id/fourButton"
            android:enabled="false"/>
    </RelativeLayout>
</LinearLayout>