<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="mosaic.happin.ImageChange"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        app:popupTheme="@style/AppTheme.PopupOverlay">

    </android.support.v7.widget.Toolbar>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="300dp"
        android:background="@color/lightGrey"
        android:scaleType="fitCenter"
        android:adjustViewBounds="true"
        android:layout_centerInParent="true"
        android:id = "@+id/changePicImage"/>
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@id/changePicImage"
        android:layout_alignBottom="@+id/changePicImage"
        android:src="@drawable/ic_mode_edit_white_36dp"
        android:layout_marginBottom="5dp"
        android:layout_marginEnd="5dp"
        android:onClick = "changeImage"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAlignment="center"
        android:layout_below="@+id/changePicImage"
        android:layout_marginTop="@dimen/activity_vertical_margin"
        android:id="@+id/changePicName"/>


</RelativeLayout>
